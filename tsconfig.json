{
  "compilerOptions": {
  	"allowJs": true,
  	"allowUnreachableCode": true,
    "lib": [ "es2015", "dom" ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "allowUnusedLabels": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true
  },
  "exclude": [
		"node_modules"
  ],
  "compileOnSave": false
}