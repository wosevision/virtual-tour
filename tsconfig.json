{
  "compilerOptions": {
  	"allowJs": true,
  	"allowSyntheticDefaultImports": true,
  	"allowUnreachableCode": true,
    "lib": [ "es2016", "dom" ],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "client/typings.d.ts"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "allowUnusedLabels": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "pretty": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
		"node_modules",
		"**/*.spec.(ts|js)",
		"generator"
  ],
  "compileOnSave": false
}